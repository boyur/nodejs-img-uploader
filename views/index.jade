html
  head
    title drag-drop example
    style.
      body {
        height: 100%;
      }
      .drag {
        border: 5px dashed red;
      }

      .upload {
        width: 300px;
        height: 200px;
        background: gray;
      }

      .upload img {
        width: 100%;
        height: 100%;
      }

      #img-container {
        width: 300px;
        height: 200px;
        background: gray;
      }

  body
    div
      input#file-field(type='file', name='file', multiple='true')
    #img-container
      ul#img-list
    script(src='./js/jquery-3.1.1.min.js')
    script(src='./js/upload.js')
